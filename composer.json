{
	"name": "syntaxoops/powermail-extended",
	"type": "typo3-cms-extension",
	"description": "Extends base powermail extension.",
  "keywords": [
    "TYPO3",
    "powermail",
    "backend"
  ],
	"authors": [
		{
			"name": "Haythem Daoud",
      "email": "haythemdaoud.x@gmail.com",
			"role": "Developer"
		}
	],
  "license": [
    "GPL-3.0-or-later"
  ],
	"require": {
		"php": ">= 8.1 < 8.4",
		"typo3/cms-core": "^12.4 || ^13.0",
		"in2code/powermail": "^12.5.3 || ^13.0"
	},
	"require-dev": {
		"phpstan/phpdoc-parser": "^2.2.0",
		"typo3/testing-framework": "^8.2.7 || ^9.2.0",
		"phpunit/phpunit": "^10.5.53 || ^11.5.33",
		"typo3/coding-standards": "^0.8.0",
		"friendsofphp/php-cs-fixer": "^3.86.0"
	},
	"autoload": {
		"psr-4": {
			"SyntaxOOps\\PowermailExtended\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SyntaxOOps\\Autosuggest\\Tests\\": "Tests"
		}
	},
  "replace": {
    "typo3-ter/powermail-extended": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "scripts": {
    "post-install-cmd":  [
      "chmod +x .githooks/pre-commit",
      "git init",
      "git config --local core.hooksPath .githooks/"
    ],
    "php:cs": "php-cs-fixer fix --config=Build/php-cs-fixer.php -v --dry-run --using-cache no --diff",
    "php:fix": "php-cs-fixer fix --config=Build/php-cs-fixer.php"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "powermail_extended",
      "web-dir": ".Build/Web"
    }
  }
}
